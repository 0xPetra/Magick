{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["vite/client", "node"]
  },
  "paths": {
    "@/*": ["src/*"],
    "@components/*": ["src/components/*"],
    "stream": [
      "node_modules/stream-browserify"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "**/*_spec.ts",
    "**/*.spec.tsx",
    "**/*_spec.tsx",
    "public/*"
  ]
}
